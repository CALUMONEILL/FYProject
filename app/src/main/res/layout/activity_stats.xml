<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/divNavigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Home">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="328dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNavigationView"
        android:layout_width="408dp"
        android:layout_height="94dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"

        >

        <Button
            android:id="@+id/btnHome"
            android:layout_width="67dp"
            android:layout_height="69dp"
            android:backgroundTint="#00D9D9D9"
            android:foreground="@drawable/ic_home_black_24dp"
            app:cornerRadius="110dp"
            app:iconTint="#00232222"
            app:iconTintMode="add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.52"
            app:strokeColor="#001C1A1A"
            app:strokeWidth="1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtAnalytics"
        android:layout_width="279dp"
        android:layout_height="50dp"
        android:fontFamily="@font/kumbh_sans"
        android:text="Your Analytics"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/ScoreGrid"
        android:layout_width="411dp"
        android:layout_height="183dp"
        app:layout_constraintBottom_toTopOf="@+id/ScoreGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAnalytics"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/txtScoreTitle"
            android:layout_width="237dp"
            android:layout_height="32dp"
            android:fontFamily="@font/kumbh_sans"
            android:text="   Your Current Score"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/txtScoreNumber"
            android:layout_width="238dp"
            android:layout_height="70dp"
            android:fontFamily="@font/kumbh_sans"
            android:text="  0/6"
            android:textAlignment="textStart"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/txtDesc1"
            android:layout_width="173dp"
            android:layout_height="66dp"
            android:fontFamily="@font/kumbh_sans"
            android:text="This calculates your ability to hear common frequencies"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnAll"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:text="See all results"
            app:cornerRadius="0dp"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/txtStruggle"
            android:layout_width="170dp"
            android:layout_height="38dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/kumbh_sans"
            android:text="No results"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="2" />

    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/RatingGrid"
        android:layout_width="411dp"
        android:layout_height="134dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txtRatingTitle"
            android:layout_width="237dp"
            android:layout_height="32dp"
            android:fontFamily="@font/kumbh_sans"
            android:text="   Confidence Rating"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/txtRatingNumber"
            android:layout_width="238dp"
            android:layout_height="70dp"
            android:fontFamily="@font/kumbh_sans"
            android:text="  0/6"
            android:textAlignment="textStart"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/txtDesc2"
            android:layout_width="173dp"
            android:layout_height="66dp"
            android:fontFamily="@font/kumbh_sans"
            android:text="This calculates your confidence in your hearing ability"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

    <View
        android:id="@+id/divider7"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/RatingGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScoreGrid"
        app:layout_constraintVertical_bias="0.493" />

</androidx.constraintlayout.widget.ConstraintLayout>
    <!-- All icons used were retrieved from here: https://www.flaticon.com/ -->